{
  "name": "bustly",
  "version": "0.0.1",
  "description": "OpenClaw Electron Desktop Client",
  "main": "dist/main/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run build:preload && pnpm run build:main-dev && pnpm exec concurrently \"pnpm run dev:renderer\" \"pnpm run wait:renderer && pnpm run dev:main\"",
    "dev:renderer": "vite",
    "wait:renderer": "sleep 2",
    "dev:main": "OPENCLAW_RAW_STREAM=1 OPENCLAW_PAYLOAD_LOG=1 OPENCLAW_PAYLOAD_LOG_PROVIDERS=google-antigravity,openai-codex NODE_ENV=development pnpm exec electron dist/main-dev.js",
    "dev:prod": "pnpm run build && OPENCLAW_RAW_STREAM=1 OPENCLAW_PAYLOAD_LOG=1 OPENCLAW_PAYLOAD_LOG_PROVIDERS=google-antigravity,openai-codex NODE_ENV=production pnpm exec electron .",
    "build": "pnpm run build:preload && pnpm run build:main && pnpm run build:renderer",
    "build:preload": "pnpm exec esbuild src/main/preload.ts --bundle --platform=node --target=node22 --outfile=dist/main/preload.js --external:electron --format=cjs",
    "build:main-dev": "pnpm exec esbuild src/main/index.ts --bundle --platform=node --target=node22 --outfile=dist/main-dev.js --packages=external --format=esm",
    "build:main": "pnpm exec esbuild src/main/index.ts --bundle --platform=node --target=node22 --outfile=dist/main/index.js --packages=external --format=esm",
    "build:renderer": "vite build",
    "check:main-deps": "node scripts/check-main-deps.js",
    "prepare:openclaw-deps": "node scripts/prepare-openclaw-deps.js",
    "prepare:node": "node scripts/prepare-node.js",
    "pack:app": "pnpm run prepare:openclaw-deps && pnpm run prepare:node && pnpm run build && CSC_IDENTITY_AUTO_DISCOVERY=false pnpm dlx electron-builder --mac dir -c.mac.identity=null",
    "pack:dmg": "pnpm run prepare:openclaw-deps && pnpm run prepare:node && pnpm run build && CSC_IDENTITY_AUTO_DISCOVERY=false pnpm dlx electron-builder --mac dmg -c.mac.identity=null",
    "pack:dmg:prod": "pnpm run prepare:openclaw-deps && pnpm run prepare:node && pnpm run build && pnpm dlx electron-builder --mac dmg",
    "preview": "vite preview",
    "lint": "oxlint",
    "format": "oxfmt"
  },
  "dependencies": {
    "@mariozechner/pi-ai": "0.51.0",
    "@mariozechner/pi-coding-agent": "0.51.0",
    "@aws-sdk/client-bedrock": "3.848.0",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "google-auth-library": "^10.5.0",
    "json5": "^2.2.3",
    "proper-lockfile": "^4.1.2",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.9.1",
    "tslog": "^4.10.2",
    "ws": "^8.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "40.1.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "build": {
    "appId": "bustly",
    "productName": "Bustly",
    "icon": "build/icons/icon",
    "files": [
      "dist/**",
      "!dist/electron/**",
      "package.json",
      ".env"
    ],
    "directories": {
      "output": "dist/electron"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "identity": "RETENTIA HOLDINGS LIMITED (ZZGX67T9NU)",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist"
    },
    "dmg": {
      "size": "4g",
      "background": null,
      "icon": null
    },
    "extraResources": [
      {
        "from": "resources/node",
        "to": "node"
      },
      {
        "from": "resources/openclaw/node_modules",
        "to": "node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/openclaw/openclaw.mjs",
        "to": "openclaw.mjs"
      },
      {
        "from": "resources/openclaw/package.json",
        "to": "openclaw.package.json"
      },
      {
        "from": "resources/openclaw/dist",
        "to": "dist"
      },
      {
        "from": "resources/openclaw/docs/reference/templates",
        "to": "docs/reference/templates"
      },
      {
        "from": "resources/openclaw/extensions",
        "to": "extensions"
      },
      {
        "from": "resources/openclaw/skills",
        "to": "skills"
      }
    ]
  }
}
